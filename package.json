{
  "name": "twist-icons",
  "private": true,
  "description": "A set of high-quality SVG icon components for you to use in your Vue„ÄÅReact projects.",
  "author": "razzh7 <razzhavenir@163.com>",
  "license": "MIT",
  "scripts": {
    "init": "pnpm i",
    "genIcon:vue": "pnpm -C ./packages/icons run genIcon:vue",
    "genIcon:vue-next": "pnpm -C ./packages/icons run genIcon:vue-next",
    "genIcon:react": "pnpm -C ./packages/icons run genIcon:react",
    "genIcon:all": "pnpm -C ./packages/icons run genIcon:all",
    "release:vue": "pnpm -C ./packages/icons run relase:vue",
    "release:vue-next": "pnpm -C ./packages/icons run release:vue-next",
    "release:react": "pnpm -C ./packages/icons run release:react",
    "release:all": "pnpm -C ./packages/icons run release:all",
    "release:no-build": "pnpm -C ./packages/icons run release:no-build",
    "format:snapshots": "pnpm -C ./packages/icons run format:snapshots",
    "lint": "eslint ./packages --ext .ts,.js,.tsx,.jsx",
    "clean": "pnpm -C ./packages/icons run clean",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@commitlint/cli": "^18.4.2",
    "@commitlint/config-conventional": "^18.4.2",
    "@types/node": "^20.8.10",
    "@typescript-eslint/eslint-plugin": "^6.9.1",
    "@typescript-eslint/parser": "^6.9.1",
    "eslint": "^8.52.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-json": "^3.1.0",
    "fs-extra": "^11.1.1",
    "husky": "^8.0.3",
    "install": "^0.13.0",
    "lint-staged": "^15.1.0",
    "react": "^18.2.0",
    "rimraf": "^5.0.5",
    "svgo": "^3.0.2",
    "tsx": "3.14.0",
    "typescript": "^5.2.2",
    "vite": "^4.4.5"
  },
  "lint-staged": {
    "packages/**/*.{ts,js,tsx,jsx}": "npm run lint"
  }
}
