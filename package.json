{
  "name": "twist-icons-root",
  "private": true,
  "packageManager": "pnpm@8.2.0",
  "description": "A set of high-quality SVG icon components for you to use in your Vue„ÄÅReact projects.",
  "author": "razzh7 <razzhavenir@163.com>",
  "license": "MIT",
  "scripts": {
    "init": "./init.sh",
    "genIcon:all": "pnpm -C ./packages/twist-icons run genIcon:all",
    "genIcon:vue2": "pnpm -C ./packages/twist-icons run genIcon:vue2",
    "genIcon:vue3": "pnpm -C ./packages/twist-icons run genIcon:vue3",
    "genIcon:react": "pnpm -C ./packages/twist-icons run genIcon:react",
    "release:all": "pnpm -C ./packages/twist-icons run release:all",
    "release:vue2": "pnpm -C ./packages/twist-icons run relase:vue2",
    "release:vue3": "pnpm -C ./packages/twist-icons run release:vue3",
    "release:react": "pnpm -C ./packages/twist-icons run release:react",
    "release:no-build": "pnpm -C ./packages/twist-icons run release:no-build",
    "lint": "eslint ./packages --ext .ts,.js,.tsx,.jsx",
    "lint:tsc": "tsc --noEmit --skipLibCheck --project ./packages/twist-icons/tsconfig.base.json",
    "prepare": "husky install",
    "test": "vitest"
  },
  "devDependencies": {
    "@commitlint/cli": "^18.4.2",
    "@commitlint/config-angular": "^18.4.3",
    "@types/node": "^20.8.10",
    "@types/react": "^18.2.15",
    "@typescript-eslint/eslint-plugin": "^6.9.1",
    "@typescript-eslint/parser": "^6.9.1",
    "eslint": "^8.52.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-json": "^3.1.0",
    "fs-extra": "^11.1.1",
    "husky": "^8.0.3",
    "install": "^0.13.0",
    "jsdom": "^23.0.1",
    "lint-staged": "^15.1.0",
    "react": "^18.2.0",
    "rimraf": "^5.0.5",
    "svgo": "^3.0.2",
    "tsx": "3.14.0",
    "typescript": "^5.2.2",
    "vite": "^4.4.5",
    "vitest": "^1.0.1"
  },
  "lint-staged": {
    "packages/twist-icons/*.{ts,js}": [
      "npm run lint",
      "npm run lint:tsc"
    ]
  },
  "pnpm": {
    "packageExtensions": {
      "vue-template-compiler": {
        "peerDependencies": {
          "vue": "2.6.14"
        }
      }
    }
  }
}
