{
  "name": "twist-icons-root",
  "private": true,
  "description": "A set of high-quality SVG icon components for you to use in your Vue„ÄÅReact projects.",
  "author": "razzh7 <razzhavenir@163.com>",
  "license": "MIT",
  "scripts": {
    "init": "pnpm i",
    "genIcon:vue": "pnpm -C ./packages/twist-icons run genIcon:vue",
    "genIcon:vue-next": "pnpm -C ./packages/twist-icons run genIcon:vue-next",
    "genIcon:react": "pnpm -C ./packages/twist-icons run genIcon:react",
    "genIcon:all": "pnpm -C ./packages/twist-icons run genIcon:all",
    "release:vue": "pnpm -C ./packages/twist-icons run relase:vue",
    "release:vue-next": "pnpm -C ./packages/twist-icons run release:vue-next",
    "release:react": "pnpm -C ./packages/twist-icons run release:react",
    "release:all": "pnpm -C ./packages/twist-icons run release:all",
    "release:no-build": "pnpm -C ./packages/twist-icons run release:no-build",
    "format:snapshots": "pnpm -C ./packages/twist-icons run format:snapshots",
    "lint": "eslint ./packages --ext .ts,.js,.tsx,.jsx",
    "lint:tsc": "tsc --noEmit --skipLibCheck --project ./packages/twist-icons/tsconfig.json",
    "clean": "pnpm -C ./packages/twist-icons run clean",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@commitlint/cli": "^18.4.2",
    "@commitlint/config-conventional": "^18.4.2",
    "@types/node": "^20.8.10",
    "@types/react": "^18.2.15",
    "@typescript-eslint/eslint-plugin": "^6.9.1",
    "@typescript-eslint/parser": "^6.9.1",
    "@vue/babel-helper-vue-jsx-merge-props": "^1.4.0",
    "eslint": "^8.52.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-json": "^3.1.0",
    "fs-extra": "^11.1.1",
    "husky": "^8.0.3",
    "install": "^0.13.0",
    "lint-staged": "^15.1.0",
    "react": "^18.2.0",
    "rimraf": "^5.0.5",
    "svgo": "^3.0.2",
    "tsx": "3.14.0",
    "typescript": "^5.2.2",
    "vite": "^4.4.5",
    "vue": "^3.3.8"
  },
  "lint-staged": {
    "packages/twist-icons/*.{ts,js}": [
      "npm run lint",
      "npm run lint:tsc"
    ]
  }
}
